<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.home.auth.repository.BrokerMapper">
    <insert id="insertBroker">
        INSERT INTO broker (bid, office_name, broker_name, phone_num, address, license_num, password, salt, email)
        VALUES (#{id}, #{officeName}, #{name}, #{phoneNum}, #{address}, #{licenseNum}, #{password}, #{salt}, #{email})
    </insert>

    <select id="findById" parameterType="String" resultType="com.ssafy.home.auth.domain.Broker">
        SELECT * FROM broker WHERE bid = #{id}
    </select>

    <select id="findByEmail" parameterType="String" resultType="com.ssafy.home.auth.domain.Broker">
        SELECT *
        FROM broker
        WHERE email = #{email}
    </select>

    <delete id="deleteById" parameterType="String">
        DELETE FROM broker WHERE bid = #{id}
    </delete>

    <update id="updateLastLogin" parameterType="String">
        UPDATE broker
        SET last_login = NOW()
        WHERE bid = #{id}
    </update>


</mapper>