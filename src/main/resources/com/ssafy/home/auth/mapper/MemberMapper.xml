<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.home.auth.repository.MemberMapper">
    <insert id="insertMember">
        INSERT INTO member (mid, password, salt, email, phone_num, name, created_at, updated_at)
        VALUES (#{id}, #{password}, #{salt}, #{email}, #{phoneNum}, #{name}, #{createdAt}, #{updatedAt})
    </insert>

    <select id="findById" parameterType="String" resultType="com.ssafy.home.auth.domain.Member">
        SELECT * FROM member WHERE mid = #{id}
    </select>

    <delete id="deleteById" parameterType="String">
        DELETE FROM member WHERE mid = #{id}
    </delete>

</mapper>