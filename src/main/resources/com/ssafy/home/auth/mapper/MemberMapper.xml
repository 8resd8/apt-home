<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.home.auth.repository.MemberMapper">
    <insert id="insertMember">
        INSERT INTO member (mid, password, salt, email, phone_num, name)
        VALUES (#{id}, #{password}, #{salt}, #{email}, #{phoneNum}, #{name})
    </insert>

    <select id="findById" parameterType="String" resultType="com.ssafy.home.auth.domain.Member">
        SELECT * FROM member WHERE mid = #{id}
    </select>

    <delete id="deleteById" parameterType="String">
        DELETE FROM member WHERE mid = #{id}
    </delete>

    <update id="updateLastLogin" parameterType="String">
        UPDATE member
        SET last_login = NOW()
        WHERE mid = #{id}
    </update>


</mapper>